{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@utils/*": ["src/utils/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/app/@types",
    ]
  },
  "include": ["./**/*.tsx", "./**/*.ts", "./**/*.d.ts"]
}
